<li>
    <article class="snippet">
        <div>
            <h3 class="snippet__title"> <a href="{{  post.url  }}">{{ post.data.title }}</a></h3><br>
            <p class="snippet__meta"> by <span>{{post.data.author}}</span> on <span>{{ post.date | postDate }}</span>
            </p> <br>
            <p class="snippet__body"> {{post.data.description}}</p> <br>
            <a href="{{  post.url  }}" class="btn btn--primary">Continue Reading</a>
        </div>
        <a href="{{  post.url  }}">
            <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet_image">
        </a>
    </article>
</li>


